include-file=~/.config/polybar/machine-specific.ini

[colors]
primary = #ffb52a
alert = #bd2c40
alert-bright = #ff3450

foreground = #444
background = #e4eaf0

foreground-focused = #111
background-focused = ${colors.primary}

foreground-visible = #7a6b4b
background-visible = #fff38e

foreground-dimmed = #bbb

foreground-unfocused = #888

green = #44bb44
white = #ffffff

overline-green = ${colors.green}
overline-orange = #ffb52a

volume-low  = #55aa55
volume-mid  = #f5a70a
volume-high = #ff5555

[bar/base]
monitor = ${env:MONITOR}

bottom = true

width = 100%
height = 35
fixed-center = false

foreground = ${colors.foreground}
background = ${colors.background}
alert = ${colors.alert}
alert-bright = ${colors.alert-bright}
monitoring-green = ${colors.green}
monitoring-grey = ${colors.foreground-dimmed}
monitoring-red = ${colors.alert}

line-size = 3
line-color = #f00

border-size = 1
border-color = #000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Deja Vu Sans:pixelsize=16;2
font-1 = Material Icons:style=Regular:pixelsize=17;5

[bar/bottom]
inherit = bar/base

modules-left = logo i3
modules-right = current-mpd-song bluetooth-headset mouse eth wlan battery output-sink sound date

tray-position = none

[module/logo]
type = custom/text
content = ""
content-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
strip-wsnumber = false
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.foreground-focused}
label-focused-background = ${colors.background-focused}
label-focused-overline= ${colors.overline-orange}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground-unfocused}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.foreground-visible}
label-visible-background = ${colors.background-visible}
label-visible-overline = ${colors.background-focused}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-foreground = ${colors.white}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 3
format-prefix = " "
label = %percentage:2%%

[module/wlan]
type = internal/network
interface = ${machine-specific.wlan-interface}
interval = 3.0

format-connected = <label-connected> <ramp-signal>
format-connected-overline = ${colors.overline-green}
label-connected = 

format-disconnected = 
format-disconnected-foreground = ${colors.foreground-dimmed}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = ~
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = ${machine-specific.eth-interface}
interval = 5.0

label-connected =  (%downspeed%)
format-connected-overline = ${colors.overline-green}

label-disconnected = ""
format-disconnected-foreground = ${colors.foreground-dimmed}

[module/date]
type = internal/date
interval = 5

date = "%a %b %d -"
date-alt =

time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[module/sound]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =  %percentage%%

label-muted = 
label-muted-foreground = ${colors.foreground-dimmed}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging =  <label-charging>
format-charging-overline = ${colors.overline-green}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-overline = ${colors.overline-orange}

format-full = 
format-full-overline = ${colors.overline-green}

ramp-capacity-2 = 
ramp-capacity-1 = 
ramp-capacity-0 = 

[module/ssl-status]
type = custom/script
exec = /usr/bin/env ruby $HOME/.config/polybar/scripts/check_ssl_validity.rb
interval = 15

[module/backup-status]
type = custom/script
exec = /usr/bin/env ruby $HOME/.config/polybar/scripts/check_backup_status.rb
interval = 60

[module/mouse]
type = custom/script
exec = $HOME/bin/mouse.sh state-polybar
interval = 1

[module/output-sink]
type = custom/script
exec = /usr/bin/env ruby $HOME/bin/sound_outputs.rb
click-left = /usr/bin/env ruby $HOME/bin/sound_outputs.rb --cycle
click-right = /usr/bin/env ruby $HOME/bin/sound_outputs.rb --move-sources-to-current

font = 0
interval = 1

[module/bluetooth-headset]
type = custom/script
exec = /usr/bin/env ruby $HOME/bin/bluetooth_headset --show
interval = 1

[module/current-mpd-song]
type = custom/script
exec = /usr/bin/env ruby $HOME/bin/mpd-status
interval = 1

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
