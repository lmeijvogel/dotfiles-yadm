# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Used for screenshots: Resulting images are 600x400 resp. 1280x800
        bindsym Shift+h resize set 664 px 428 px
        bindsym Shift+l resize set 1284 px 828 px

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# KDE integration
# Plasma compatibility improvements
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

for_window [title="Desktop — Plasma"] kill; floating enable; border none
for_window [class="yakuake"] floating enable
for_window [class="systemsettings"] floating enable
for_window [class="plasmashell" window_type="notification"] floating enable, border none, move right 700px, move down 450px
for_window [class="plasmashell"] floating enable
for_window [class="Plasma"] floating enable; border none
for_window [title="plasma-desktop"] floating enable; border none
for_window [title="win7"] floating enable; border none
for_window [class="krunner"] floating enable; border none
for_window [class="Kmix"] floating enable; border none
for_window [class="Klipper"] floating enable; border none
for_window [class="Plasmoidviewer"] floating enable; border none
for_window [class="(?i)*nextcloud*"] floating disable
for_window [class="Blueman-manager"] floating enable

no_focus [class="plasmashell"]
# /KDE integration

for_window [title="data:, - Google Chrome"] move container to workspace $ws_itest, fullscreen enable
for_window [title="^emacs"] move container to workspace $ws2; workspace $ws2
for_window [title="^New Tab - Google Chrome"] move container to workspace $ws4; workspace $ws4; layout stacking
for_window [title="^Slack - .*"] move container to workspace $ws4; workspace $ws4; layout stacking
for_window [title="^DevTools - .*"] move container to workspace $ws3; workspace $ws3; floating disable; layout stacking
for_window [window_role="gnome-calculator"] floating enable
for_window [class="Gnome-system-monitor"] floating enable
for_window [class="Gnote"] floating enable
for_window [class="zoom"] move container to workspace $ws5; workspace $ws5
for_window [class="zoom" title="^Zoom - Pro Account.*"] floating enable resize set 376 500
for_window [class="zoom" title="Settings"] floating enable

# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #248fff #ffffff #2e9ef4   #ffffff
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

hide_edge_borders horizontal

{% if YADM_HOSTNAME == "home-desktop" %}
  set $output_left DP-1
  set $output_right HDMI-1

  set $output_right_or_laptop HDMI-1
{% elif YADM_HOSTNAME == "lennaert-Precision-5530" %}
  exec_always --no-startup-id exec $HOME/start.sh
  exec --no-startup-id exec ~/bin/start_workrave

  for_window [class="Firefox"] floating enable, move to scratchpad, scratchpad show
  bindsym $mod+grave [class="Firefox"] scratchpad show

  exec --no-startup-id firefox

  set $output_left eDP-1
  set $output_right DP-1-2

  set $output_right_or_laptop DP-1-2

  for_window [title="^Windows 10 .*: 1"] move container to workspace $ws6
  for_window [title="^Windows 10 .*: 2"] move container to workspace $ws5

  bindsym Control+$mod+Mod1+Escape exec --no-startup-id $HOME/.lib/custom-commands/layouts/$(hostname)/laptop-only.sh
{% endif %}



# Pulse Audio controls
bindsym $mod+F8        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle # mute/unmute sound

# Open sound mixer in a floating window
bindsym $mod+Shift+F8  exec qpaeq; exec "bash -c 'sleep 0.2s;i3-msg floating enable;i3-msg resize set 800px 600px;i3-msg move position center'"

bindsym $mod+F9        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% # decrease sound volume
bindsym $mod+Shift+F9  exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% # decrease sound volume (small step)

bindsym $mod+F10       exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% # increase sound volume
bindsym $mod+Shift+F10 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% # increase sound volume (small step)

# Calculator
bindsym $mod+F11        exec --no-startup-id gnome-calculator

# Cycle between workspaces on the current display
bindsym Control+Mod1+Right exec --no-startup-id $ruby $HOME/bin/i3-cycle-workspaces.rb up
bindsym Control+Mod1+l exec --no-startup-id $ruby $HOME/bin/i3-cycle-workspaces.rb up

bindsym Control+Mod1+Left exec --no-startup-id $ruby $HOME/bin/i3-cycle-workspaces.rb down
bindsym Control+Mod1+h exec --no-startup-id $ruby $HOME/bin/i3-cycle-workspaces.rb down

# Cycle windows (super-tab and alt-tab)
bindsym $mod+Tab exec --no-startup-id $ruby $HOME/bin/i3-cycle-windows.rb up
bindsym Mod1+Tab exec --no-startup-id $ruby $HOME/bin/i3-cycle-windows.rb up
bindsym $mod+Shift++Tab exec --no-startup-id $ruby $HOME/bin/i3-cycle-windows.rb down
bindsym Mod1+Shift++Tab exec --no-startup-id $ruby $HOME/bin/i3-cycle-windows.rb down

# Move workspace to left and right monitors
bindsym $mod+Shift+bracketleft move workspace to output left
bindsym $mod+Shift+bracketright move workspace to output right

workspace $ws1 output $output_left
workspace $ws3 output $output_left
workspace $ws5 output $output_left
workspace $ws7 output $output_left

workspace $ws2 output $output_right
workspace $ws4 output $output_right
workspace $ws6 output $output_right
workspace $ws8 output $output_right
workspace $ws10 output $output_right

workspace $ws9 output $output_right_or_laptop


{% if YADM_HOSTNAME == "home-desktop" %}
  # For i3-gaps: No border
  for_window [class=".*"] border pixel 2
  gaps inner 4

  smart_gaps on
{% endif %}

# Screenshot selection
bindsym --release Print exec spectacle --gui

# Screenshot current window
bindsym --release Shift+Print exec spectacle --region

mode "volume" {
    # Lots of duplication, since i3wm doesn't support recursive variables :(
    bindsym s        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@ toggle

    # Volume up/down with k/j
    bindsym k       exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% # increase sound volume
    bindsym Shift+k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% # increase sound volume (small step)

    bindsym j        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% # decrease sound volume
    bindsym Shift+j  exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% # decrease sound volume (small step)

    # Volume up/down with q/a
    bindsym q       exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% # increase sound volume
    bindsym Shift+q exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% # increase sound volume (small step)

    bindsym a        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% # decrease sound volume
    bindsym Shift+a  exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% # decrease sound volume (small step)

    bindsym z        exec --no-startup-id $mpc prev
    bindsym x        exec --no-startup-id $mpc play
    bindsym c        exec --no-startup-id $mpc pause
    bindsym v        exec --no-startup-id $mpc stop
    bindsym b        exec --no-startup-id $mpc next

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "volume"

bindsym $mod+Shift+w exec --no-startup-id $HOME/bin/breaks_off

# The "sleep" is to (hopefully) ensure that compton is started long after all the monitor adjustments
exec_always --no-startup-id "sleep 10; killall -q compton; compton --config ~/.config/compton/compton.conf"
exec_always --no-startup-id MONITOR_LEFT=$output_left MONITOR_RIGHT=$output_right MONITOR_LAPTOP=$output_laptop $HOME/.config/polybar/launch.sh
exec_always --no-startup-id kmix

exec_always --no-startup-id $HOME/.fehbg &

exec --no-startup-id i3-msg workspace $ws1
exec --no-startup-id i3-msg workspace $ws4

